.detailContainer
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  // transform translateY(100%)
  transition transform 0.1s ease-out
  background-color #fff
  touch-action none
  .detailTop
    .back
      position absolute
      left 15px
      top 10px
      width 25px
      z-index 3
    .music-title
      position relative
      text-align center
      font-size 20px
      color #fff
      padding-top 15px
      z-index 3
      font-weight 800
    .music-author
      position relative
      text-align center
      font-size 16px
      color #fff
      padding-top 15px
      z-index 3
      font-weight 800
      &:before
        content ''
        display inline-block
        width 20px
        border-top 1px solid #fff
        vertical-align 6px
        margin-right 10px
      &:after
        content ''
        display inline-block
        width 20px
        border-top 1px solid #fff
        vertical-align 6px
        margin-left 10px
  .detailMid
    text-align center
    position relative
    z-index 10
    .music-cover
      width 210px
      height 210px
      border-radius 50%
      margin-top 60px
      background-color pink
      position relative
      z-index 10
      &.active
        animation: picRotate 10s linear infinite
    .carousel-two
      position relative
      z-index 10
      color #fff
  .detailBottom
    box-sizing border-box
    padding-bottom 20px
    position relative
    z-index 10
    line-height 150px
    .progress
      position relative
      margin-top 15px
      text-align center
      .currentPlayTime, .totalPlayTime
        position absolute
        color #8a8a8a
        font-size 12px
      .currentPlayTime
        left 25px
        top 7px
      .totalPlayTime
        right 25px
        top 7px
      .progress-wrapper
        position relative
        display inline-block
        width 200px
        height 1px
        background-color #e6e6e6
        .progress-inner
          height 1px
          background-color #31c37c
        .progress-btn
          position absolute
          top -8px
          left 0
          width 15px
          height 15px
          border-radius 50%
          background-color #31c37c
    .controlBtn
      display flex
      height 90px
      align-items center
      justify-content center
      margin-top 25px
      .status
        width 70px
        height 70px
        margin 0 15px
      .prev, .next
        width 40px
        height 40px
  .detailBg
    background-image url('../../assets/images/topic-tianfuzhen.jpeg')
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-size cover
    background-position bottom center
    z-index 1
    -webkit-filter blur(15px)
    -webkit-transform scale(1.15)
  .bgMask
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background #000
    z-index 2
    opacity 0.6

@keyframes picRotate 
  from
    transform rotate(0)
  to
    transform: rotate(360deg)