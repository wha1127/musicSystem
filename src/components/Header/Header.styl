.home
  width 100%
  background-color #02a774
  .header
    height 40px
    display flex
    justify-content space-between
    .header-left
      position relative
      img
        position absolute
        left 12px
        top 3px
        width 28px
        height 35px
        background-size 28px 35px
    .header-mid
      padding-top 6px
      span
        padding 0 10px
        font-weight 300
        font-size 20px
        color #dbf3e8
    .header-right
      position relative
      img
        position absolute
        right 12px
        top 6px
        width 28px
        height 28px
  .bottom
    padding 7px 10px
    .search
      width 100%
      height 30px
      background-color rgba(219, 243, 232, 0.3)
      border-radius 5px
      display flex
      justify-content center
      align-items center
      .text
        margin-left 5px
        font-size 17px
        font-style normal
        color #dbf3e8
        font-weight 300
      .search-icon
        display inline-block
        background-image url('../../assets/icon-search-default.png')
        height 18px
        width 18px
        background-size 18px 18px
