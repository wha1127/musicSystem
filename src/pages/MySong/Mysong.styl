px2rem(designpx )
  $rem = 37.5px;
  return (designpx / $rem )rem
.container
  height: 100%
  display: flex
  flex-direction: column
  .content
    display flex
    justify-content center
    flex-wrap wrap
    .content-top
      display flex
      justify-content space-around
      padding px2rem(5px) 0 px2rem(10px)
      width 100%
      .content-left
        display inline-block
        border 1px solid #8a8a8a
        text-align center
        width px2rem(80px)
        height px2rem(25px)
        border-radius px2rem(15px)
        text-align center
        margin-top px2rem(5px)
        .listenTime
          display inline-block
          vertical-align px2rem(-5px)
          width px2rem(24px)
          height px2rem(24px)
          background-size px2rem(24px) px2rem(24px)
          background-image url('../../assets/icon-user-audition.png')
        span
          padding-left px2rem(4px)
          font-size px2rem(14px)
          color #cdcdcd
    .avatar
      width px2rem(50px)
      height px2rem(50px)
      border-radius 50%
      vertical-align middle
      margin 0 px2rem(15px)
    .content-right
      display inline-block
      border 1px solid #8a8a8a
      text-align center
      width px2rem(80px)
      height px2rem(25px)
      border-radius px2rem(15px)
      text-align center
      margin-top px2rem(5px)
      .vip
        display inline-block
        vertical-align px2rem(-5px)
        width px2rem(24px)
        height px2rem(24px)
        background-size px2rem(24px) px2rem(24px)
        background-image url('../../assets/icon-user-dredge.png')
        span
          padding-left px2rem(4px)
          font-size px2rem(14px)
          color #cdcdcd
    .split
      width 100%
      text-align center
      position relative
      height px2rem(40px)
      .vip
        height px2rem(19px)
        width px2rem(19px)
        position absolute
        left 48%
        bottom 0
      span
        position relative
        font-size px2rem(20px)
        font-weight 500
        &:before
          position absolute
          left px2rem(-48px)
          top px2rem(16px)
          content ''
          height px2rem(1px)
          width px2rem(40px)
          border-top 1px solid #2c2c2c
        &:after
          position absolute
          right px2rem(-48px)
          top px2rem(16px)
          content ''
          height px2rem(1px)
          width px2rem(40px)
          border-top 1px solid #2c2c2c
    .content-bottom
      width 100%
      .list
        .am-flexbox
          display flex
          .itemList
            display flex
            flex-direction column
            align-items center
            margin-top px2rem(5px)
            img
              width px2rem(35px)
              height px2rem(35px)
            span
              text-align center
              font-size px2rem(15px)
              padding-top px2rem(5px)
  .radio
    margin-top px2rem(10px)
    margin-left px2rem(10px)
    .row
      display flex
      height px2rem(55px)
      margin px2rem(5px)
      .left
        img
          width px2rem(55px)
          height px2rem(55px)
      .right
        .station-title
          font-size px2rem(16px)
          font-weight 400
          padding: px2rem(5px) 0
        .station-text
          font-size px2rem(13px)
          color #cacaca
          font-weight 300
          padding: px2rem(5px) 0
    .splitLine
      border 1px solid #000
  .menus
    width 100%
    .menusTop
      text-align center
      margin-top px2rem(5px)
      background #fff
      line-height 40px
      color #8a8a8a
      .split
        margin 0 px2rem(10px)
      .add
        position absolute
        right px2rem(40px)
        top px2rem(11px)
        display inline-block
        height px2rem(20px)
        width px2rem(20px)
        background url('../../assets/icon-songmenu-add.png')
        background-size px2rem(20px) px2rem(20px)
      .detail
        position absolute
        right px2rem(10px)
        top px2rem(12px)
        display inline-block
        height px2rem(20px)
        width px2rem(20px)
        background url('../../assets/icon-songmenu.png')
        background-size px2rem(20px) px2rem(20px)
    .menusBottom
      display flex
      margin-left px2rem(10px)
      position relative
      &:after
        width px2rem(276px)
        position absolute
        height px2rem(1px)
        content ''
        background-color rgb(231,231,231)
        bottom 0
        left: px2rem(72px)
      .addSongMenu
        background-color #ccc
        width px2rem(60px)
        height px2rem(60px)
        line-height px2rem(60px)
        text-align center
        img
          height px2rem(20px)
          width px2rem(20px)
      span
        font-size px2rem(20px)
        text-align center
        color rgb(211, 211, 211)
        line-height px2rem(60px)
        margin-left px2rem(10px)
